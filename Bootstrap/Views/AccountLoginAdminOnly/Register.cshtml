
@{
    
    @model Bootstrap.Models.Admin.Register
}

<!DOCTYPE html>
<html>
<head>
    <title>Dodaj użytkownika dla klienta</title>
    <style>
        form {
            width: 300px;
            margin: 0 auto;
        }

        input, textarea {
            width: 100%;
            margin-bottom: 10px;
        }

        button {
            width: 100%;
        }
    </style>
</head>
<body>
    <form action="/AccountLoginAdminOnly/Register" method="post">
        <h3>Rejestracja konta</h3>
        <div class="form-group mb-4">
            <label class="control-label" for="UserName">Name</label>
            <input class="form-control" type="text" id="UserName" Name="UserName" />
        </div>
        <div class="form-group mb-4">
            <label class="control-label" for="UserEmail">Email</label>
            <input class="form-control" type="text" id="UserEmail" name="UserEmail" />
        </div>
        <div class="form-group mb-4">
            <label class="control-label" for="Password">Password</label>
            <input class="form-control" type="password" id="Password" name="Password" />
        </div>
        <div class="form-gorup mb-4">
            <input type="submit" value="Register" class="btn btn-primary">
        </div>
        <div class="card" style="width: 18rem;">
            
            <div class="card-body">
                <p class="card-text">Tutaj stworzysz konto dla swojego news lettera.</p>
            </div>
        </div>
    </form>
</body>
</html>

